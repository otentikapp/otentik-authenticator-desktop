{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "yarn build",
        "beforeDevCommand": "yarn dev",
        "devPath": "http://localhost:5173",
        "distDir": "../dist"
    },
    "package": {
        "productName": "Authenticator",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": true,
            "http": {
                "all": true,
                "request": true,
                "scope": [
                    "https://api.github.com/repos/riipandi/otentik-authenticator-desktop/*",
                    "https://euixyxtccojbikdvifsy.supabase.co/*"
                ]
            },
            "fs": {
                "scope": {
                "allow": ["$APP/db/**", "$DOWNLOAD/**", "$RESOURCE/**"],
                "deny": ["$APP/db/*.stronghold"]
                }
            }
        },
        "systemTray": {
            "iconPath": "icons/tray-256.png",
            "iconAsTemplate": true
        },
        "bundle": {
            "active": true,
            "category": "Utility",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": ["icons/32.png", "icons/128.png", "icons/256.png", "icons/1024.ico", "icons/1024.icns"],
            "identifier": "app.otentik.authenticator",
            "longDescription": "Open Source two factor authenticator",
            "macOS": {
                "entitlements": "../entitlements.plist",
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "Open Source two factor authenticator",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": "",
                "wix": {
                    "enableElevatedUpdateTask": false
                }
            }
        },
        "security": {
            "csp": "default-src 'self'"
        },
        "updater": {
            "active": false,
            "dialog": false,
            "pubkey": "YOUR_UPDATER_SIGNATURE_PUBKEY_HERE",
            "endpoints": [
                "https://otentik.app/api/release/{{target}}/{{current_version}}"
            ]
        },
        "windows": [
            {
                "visible": true,
                "alwaysOnTop": true,
                "title": "Authenticator",
                "skipTaskbar": true,
                "fullscreen": false,
                "maximized": false,
                "resizable": false,
                "height": 585,
                "width": 360
            }
        ]
    }
}
