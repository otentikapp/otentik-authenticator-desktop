{
    "name": "@otentik/authenticator-desktop",
    "description": "Open Source two factor authenticator",
    "license": "Apache-2.0",
    "version": "0.1.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "build:mac:arm": "tauri build --target aarch64-apple-darwin",
        "build:mac:x64": "tauri build --target x86_64-apple-darwin",
        "lint": "eslint src",
        "lint:fix": "npm run lint -- --fix",
        "prettier": "npx prettier src --check",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx}\"  && npm run lint:fix",
        "clean": "cd src-tauri && cargo clean",
        "preview": "vite preview",
        "tauri": "tauri"
    },
    "dependencies": {
        "@headlessui/react": "^1.6.6",
        "@supabase/supabase-js": "~1.35.6",
        "@tauri-apps/api": "^1.0.2",
        "clipboardy": "^3.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-hot-toast": "^2.3.0",
        "react-hotkeys-hook": "^3.4.7",
        "tauri-plugin-store-api": "github:tauri-apps/tauri-plugin-store#ce109ff53b43f036ea39cdc3f7c44d582f910270",
        "zustand": "^4.0.0"
    },
    "devDependencies": {
        "@faker-js/faker": "^7.4.0",
        "@heroicons/react": "^1.0.6",
        "@tailwindcss/forms": "^0.5.2",
        "@tauri-apps/cli": "^1.0.5",
        "@types/node": "^18.7.6",
        "@types/react": "^18.0.17",
        "@types/react-dom": "^18.0.6",
        "@typescript-eslint/eslint-plugin": "^5.33.1",
        "@typescript-eslint/parser": "^5.33.1",
        "@vitejs/plugin-react": "^2.0.1",
        "autoprefixer": "^10.4.8",
        "csstype": "^3.1.0",
        "eslint": "^8.22.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "^6.6.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.30.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "postcss": "^8.4.16",
        "prettier": "^2.7.1",
        "prettier-plugin-tailwindcss": "^0.1.13",
        "tailwind-scrollbar-hide": "^1.1.7",
        "tailwindcss": "^3.1.8",
        "typescript": "^4.7.4",
        "vite": "^3.0.8",
        "vite-tsconfig-paths": "^3.5.0"
    },
    "prettier": {
        "jsxSingleQuote": true,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "all",
        "useTabs": false
    }
}
